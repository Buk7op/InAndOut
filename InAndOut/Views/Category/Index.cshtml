@model IEnumerable<InAndOut.Models.Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create new Category</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="55%">@item.CategoryName</td>
                        <td width="35%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary">Update</a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No category created yet</p>
    }
</div>



